<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_tiers"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.metalgear.komboaid.activities.StreetFighterV"
    tools:showIn="@layout/activity_street_fighter_v">

    <LinearLayout
        android:id="@+id/tiers_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Tier List"
            android:id="@+id/tier_button"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,HardcodedText" />

        <Button
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="Match-up Data"
            android:id="@+id/match_up_button"
            android:layout_weight="1"
            tools:ignore="ButtonStyle,HardcodedText" />
    </LinearLayout>

    <TextView
        android:id="@+id/table_title"
        android:layout_below="@+id/tiers_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:freezesText="true"
        tools:ignore="UnknownIdInLayout" />

    <ScrollView
        android:layout_below="@+id/table_title"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/table_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
